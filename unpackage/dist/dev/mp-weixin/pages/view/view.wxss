page {
  padding: 10px 0;
  background-color: #fff;
}
page .search_filter_area {
  position: fixed;
  padding: 0 15px;
  width: calc(100% - 30px);
  border-bottom: 1px solid #dcdcdc;
}
page .search_filter_area .search_area {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
page .search_filter_area .search_area .uni-searchbar,
page .search_filter_area .search_area uni-search-bar {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
page .search_filter_area .search_area > text {
  color: #f08a31;
  margin-left: auto;
  line-height: 36px;
  width: 52px;
  text-align: center;
}
page .search_filter_area .filter_area {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 15px 0;
  font-size: 14px;
}
page .search_filter_area .filter_area > view {
  color: #707072;
  width: 25%;
  text-align: center;
}
page .search_filter_area .filter_area > view:last-child {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
page .search_filter_area .filter_area uni-icons {
  color: #707072;
}
page .search_filter_area .filter_area image {
  width: 16px;
  height: 16px;
}
page .search_filter_area .uni-drawer .title,
page .search_filter_area uni-drawer .title {
  padding: 20rpx 0;
  font-size: 18px;
}
page .search_filter_area .uni-drawer .drawer_category,
page .search_filter_area uni-drawer .drawer_category {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
page .search_filter_area .uni-drawer .drawer_category > text,
page .search_filter_area uni-drawer .drawer_category > text {
  background-color: #f0edec;
  color: #767676;
  text-align: center;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  margin: 0 10px 10px 0;
}

