page {
  padding: 10px 0;
  background-color: #fff;
}
page .search_filter_area {
  position: fixed;
  padding: 0 15px;
  width: calc(100% - 30px);
  border-bottom: 1px solid #dcdcdc;
}
page .search_filter_area .search_area {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
page .search_filter_area .search_area .uni-searchbar,
page .search_filter_area .search_area uni-search-bar {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
page .search_filter_area .search_area > text {
  color: #f08a31;
  margin-left: auto;
  line-height: 36px;
  width: 52px;
  text-align: center;
}
page .search_filter_area .filter_area {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 15px 0;
  font-size: 14px;
}
page .search_filter_area .filter_area > view {
  color: #707072;
  width: 25%;
  text-align: center;
}
page .search_filter_area .filter_area > view:last-child {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
page .search_filter_area .filter_area uni-icons {
  color: #707072;
}
page .search_filter_area .filter_area image {
  width: 16px;
  height: 16px;
}
page .search_filter_area .uni-drawer .title,
page .search_filter_area uni-drawer .title {
  margin: 20rpx 0;
  font-size: 18px;
}
page .search_filter_area .uni-drawer .divide-line,
page .search_filter_area uni-drawer .divide-line {
  width: 100%;
  height: 1px;
  background-color: #C8C7CC;
  margin: 20px 0;
}
page .search_filter_area .uni-drawer .drawer_category,
page .search_filter_area uni-drawer .drawer_category {
  display: grid;
  text-align: center;
  grid-gap: 20rpx;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
}
page .search_filter_area .uni-drawer .drawer_category > view,
page .search_filter_area uni-drawer .drawer_category > view {
  background-color: #f0edec;
  color: #767676;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
}
page .search_filter_area .uni-drawer .drawer_category .input_area,
page .search_filter_area uni-drawer .drawer_category .input_area {
  grid-column-start: span 3;
  background-color: none;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
page .search_filter_area .uni-drawer .drawer_button,
page .search_filter_area uni-drawer .drawer_button {
  color: #fff;
  position: absolute;
  bottom: 20px;
  right: 30rpx;
  border-radius: 50px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
}
page .search_filter_area .uni-drawer .drawer_button > view,
page .search_filter_area uni-drawer .drawer_button > view {
  width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
page .search_filter_area .uni-drawer .drawer_button > view:first-child,
page .search_filter_area uni-drawer .drawer_button > view:first-child {
  border: 1px solid #f39b1f;
  background-color: #f39b1f;
}
page .search_filter_area .uni-drawer .drawer_button > view:last-child,
page .search_filter_area uni-drawer .drawer_button > view:last-child {
  border: 1px solid #f33e54;
  background-color: #f33e54;
}

