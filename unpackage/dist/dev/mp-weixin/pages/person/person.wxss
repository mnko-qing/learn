page {
  background-color: #e5e5e5;
}
page .right {
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}
page .margin_bottom_10 {
  margin-bottom: 10px;
}
page .person > view {
  background-color: #fff;
}
page .person_head {
  height: 40px;
  padding: 0 15px;
}
page .person_head image {
  width: 25px;
  height: 25px;
  margin-top: 5px;
}
page .person_head image:last-child {
  float: right;
}
page .person_user {
  height: 180px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
}
page .person_user .avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
page .person_user text {
  margin: 10px 0;
  font-size: 20px;
  font-weight: 600;
  color: black;
}
page .person_user .note {
  font-size: 14px;
  color: #adadad;
}
page .person_user .right_arrow {
  position: absolute;
  right: 15px;
  top: 50px;
  width: 22px;
  height: 22px;
}
page .person_content {
  height: 200px;
}

