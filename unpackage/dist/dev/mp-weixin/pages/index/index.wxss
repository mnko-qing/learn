.home > view {
  background-color: #fff;
}
.home .home_header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 50px;
  padding: 5px 15px;
  font-size: 16px;
}
.home .home_header .title {
  padding-left: 15px;
}
.home .home_header .title text:last-child {
  font-size: 14px;
  color: #8b8a8f;
}
.home .home_header image {
  width: 40px;
  height: 40px;
}
.home .home_header .attention {
  margin-left: auto;
  border: 1px solid #f33e54;
  color: #f33e54;
  width: 70px;
  height: 35px;
  line-height: 35px;
  text-align: center;
  border-radius: 50px;
}
.home .home_header .attentioned {
  border: 1px solid #7a7070;
  color: #7a7070;
}
.home swiper {
  height: 220px;
  width: 100%;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.home .category {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.home .category .category_item {
  width: 25%;
  padding-top: 15px;
}
.home .category .category_item view {
  font-size: 14px;
  width: 100%;
  text-align: center;
  line-height: 3;
}
.home .category .category_item button {
  width: 60px;
  height: 55px;
  border-radius: 12px;
  box-shadow: 0 3px 1px 0px #eee9e9;
}
.home .category .category_item button image {
  width: 50px;
  height: 50px;
  margin-left: -8px;
}
.home .category .category_item button::after {
  border: none;
}
.home .list {
  background-color: #e5e5e5;
}
.home .list > view {
  padding: 15px;
  background-color: #fff;
}
.home .list .title {
  text-align: center;
  font-size: 20px;
  font-weight: 600;
  padding-bottom: 10px;
}
.home .list .title:after {
  content: '';
  display: block;
  background-color: #C8C7CC;
  width: 40px;
  height: 4px;
  margin: 5px auto;
  border-radius: 4px;
}
.home .list .list_item {
  position: relative;
}
.home .list .list_item > text {
  position: absolute;
  top: 90px;
  right: 10px;
  width: 50px;
  height: 22px;
  border-radius: 8px;
  background-color: rgba(122, 122, 122, 0.5);
  text-align: center;
  color: #fff;
  font-size: 14px;
}
.home .list .list_item .list_item_title {
  font-size: 18px;
  padding: 10px 0;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.home .list .list_item .list_item_info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #c1c1c1;
  padding-bottom: 10px;
}
.home .list .list_item .list_item_info .free {
  margin-left: auto;
  color: #f33e54;
}
.home .list .list_item image {
  height: 120px;
  width: 100%;
  border-radius: 4px;
}

